<!DOCTYPE html>
<html>
  <head>
    <% include layout/layout.ejs %>
    <title><%= title %></title>
  </head>
  <body>
    <div class="container">
      <% var flag=0 %>
      <% for(var i=0 ; i < products.length ; i++) { %>
        <% if((flag)%3==0) { %>
          <div class="row">
        <% } %>
        <% flag ++; %>
        <div class="col-sm-6 col-md-4 box" id="product_<%=products[i]._id%>">
          <div class="thumbnail">
            <img src="<%=products[i].imagePath%>" alt="..." class="img-responsive">
            <div class="caption">
              <h3><%=products[i].title%></h3>
              <p><%=products[i].description%></p>
              <div class="clearfix">
                <div class="price pull-left"><%=products[i].price%></div>
                <a href="/add-to-cart/<%=products[i].id %>" class="btn btn-success" id="button" role="button">Add-to-Cart</a>
              </div>
            </div>
          </div>
        </div>
        <% if((flag)%3==0) { %>
          </div>
        <% } %>

      <% } %>
    </div>
  </body>
</html>
